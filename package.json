{
  "name": "InventoryUI",
  "version": "1.0.0",
  "keywords": [
    "util",
    "functional",
    "server",
    "client",
    "browser"
  ],
  "author": "alamgir",
  "contributors": [],
  "main": "desktop.js",
  "scripts": {
    "deploy": "webpack --progress --profile --colors --display-error-details --display-cached",
    "deploy-desktop-linux": "npm run deploy &&  electron-packager . inventory --platform=linux --arch=x64",
    "deploy-desktop-windows": "npm run deploy &&  electron-packager . inventory --platform=win32 --arch=x64",
    "compile": "tsc -w",
    "execute": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=resources/images/app-icon.png --prune=true --out=release-builds/mac",
    "package-win": "electron-packager . ims --overwrite --asar=true --platform=win32 --arch=x64 --icon=resources/images/app-icon.png --prune=true --out=release-builds/win --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Inventory Management System\"",    
    "package-linux": "electron-packager . ims --overwrite --asar=true --platform=linux --arch=x64 --icon=resources/images/app-icon.png --prune=true --out=release-builds/linux",
    "build-run": "npm run deploy && npm run execute"
  },
  "dependencies": {
    "@angular/animations": "^4.4.6",
    "@angular/cdk": "^2.0.0-beta.12",
    "@angular/common": "^4.4.6",
    "@angular/compiler": "^4.4.6",
    "@angular/compiler-cli": "^4.4.6",
    "@angular/core": "^4.4.6",
    "@angular/forms": "^4.4.6",
    "@angular/http": "^4.4.6",
    "@angular/material": "^2.0.0-beta.12",
    "@angular/platform-browser": "^4.4.6",
    "@angular/platform-browser-dynamic": "^4.4.6",
    "@angular/platform-server": "^4.4.6",
    "@angular/router": "^4.4.6",
    "angular2-uuid": "^1.1.1",
    "core-js": "^2.5.1",
    "electron": "^1.7.9",
    "ie-shim": "^0.1.0",
    "ng2-ckeditor": "^1.1.9",
    "ng2-file-upload": "^1.2.1",
    "ngx-bootstrap": "^1.9.3",
    "rxjs": "^5.4.3",
    "systemjs": "^0.20.19",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "electron-packager": "^9.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "grunt": "^1.0.1",
    "html-webpack-plugin": "^2.30.1",
    "typescript": "~2.5.3",
    "webpack": "3.8.1",
    "webpack-dev-middleware": "1.12.0",
    "webpack-dev-server": "2.9.3",
    "webpack-merge": "^4.1.0"
  }
}
